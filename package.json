{
  "name": "tsoa-project-demo",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "convert-swagger": "node convert-swagger-to-yaml.mjs",
    "generate-spec-and-routes": "tsoa spec-and-routes && npm run convert-swagger",
    "dev": "concurrently \"nodemon\" \"nodemon -x npm run generate-spec-and-routes\"",
    "build": "rimraf ./dist && npm run generate-spec-and-routes && tsc",
    "start": "npm run build && node dist/server.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}

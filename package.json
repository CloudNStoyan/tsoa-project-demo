{
  "name": "tsoa-project-demo",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "convert-swagger": "node convert-swagger-to-yaml.js",
    "generate": "tsoa spec-and-routes && npm run convert-swagger && npm run generate-client-from-swagger && npm run format",
    "dev": "concurrently \"nodemon\" \"nodemon -x npm run generate\"",
    "build": "rimraf ./dist && npm run generate && tsc && copyfiles -f ./src/generated/swagger.yaml ./dist/generated/",
    "start": "npm run build && node dist/server.js",
    "format": "prettier --cache --write .",
    "format-check": "prettier --cache --check .",
    "install-codegen-cli": "node install-codegen-cli.js",
    "generate-client-from-swagger": "rimraf ./src/generated/client && node generate-client-from-swagger.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
